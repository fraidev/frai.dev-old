{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": false,
    "importHelpers": true,
    "jsx": "react",
    "lib": [
      "dom",
      "ESNext"
    ],
    "module": "commonjs",
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "noResolve": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ESNext"
  },
  "include": [
    "./src/**/*"
  ]
}